    <script>
        function calculateWater() {
            const adults = parseInt(document.getElementById('adults').value) || 0;
            const children = parseInt(document.getElementById('children').value) || 0;
            const days = parseInt(document.getElementById('days').value) || 1;
            const climate = document.getElementById('climate').value;
            const activity = document.getElementById('activity').value;
            
            // Base water needs (gallons per person per day)
            let adultWater = 1.0; // Base 1 gallon per adult
            let childWater = 0.5; // Children need less
            
            // Climate adjustments
            if (climate === 'hot') {
                adultWater *= 1.5;
                childWater *= 1.5;
            } else if (climate === 'cold') {
                adultWater *= 1.2;
                childWater *= 1.2;
            }
            
            // Activity adjustments
            if (activity === 'high') {
                adultWater *= 1.5;
                childWater *= 1.3;
            } else if (activity === 'moderate') {
                adultWater *= 1.2;
                childWater *= 1.1;
            }
            
            const totalDaily = (adults * adultWater) + (children * childWater);
            const totalNeeded = totalDaily * days;
            
            // Storage recommendations
            const containers = Math.ceil(totalNeeded / 5); // 5-gallon containers
            const cost = Math.round(containers * 15); // Approximate cost
            
            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = `
                <h4>Your Water Requirements:</h4>
                <p><strong>Daily Needs:</strong> ${totalDaily.toFixed(1)} gallons per day</p>
                <p><strong>Total for ${days} days:</strong> ${totalNeeded.toFixed(1)} gallons</p>
                <p><strong>Storage Recommendation:</strong> ${containers} five-gallon containers</p>
                <p><strong>Estimated Cost:</strong> $${cost}</p>
                <div class="alert alert-success" style="margin-top: 1rem;">
                    <strong>Next Steps:</strong> Get "The Ready: Water" for complete storage methods, purification techniques, and procurement strategies for all three scenarios.
                </div>
            `;
            resultDiv.style.display = 'block';
        }

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
